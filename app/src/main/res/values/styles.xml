<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorGrey8</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">#80808080</item>
    </style>

    <style name="InterestImageView">
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/image_border</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="LineWidth">
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/line</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

<!--<style name="user_divider">
        <item name="android:height">2dp</item>
        <item name="android:background">@color/colorGrey2</item>
    </style>-->
    <style name="large_text_view_style">
        <item name="android:textSize">48dp</item>
        <item name="android:height">256dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:textColor">@color/colorGrey8</item>
    </style>

</resources>
