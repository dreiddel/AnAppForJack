<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- The main content view -->
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        tools:context="edu.uta.softeng.anappforjack.MainActivity">


        <Button
            android:id="@+id/button1"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Login Activity"
            android:onClick="goToLogin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Account"
            android:onClick="goToAccount"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/button1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Interest"
            android:onClick="goToInterest"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintBottom_toTopOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Register Activity"
            android:onClick="goToRegister"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintBottom_toTopOf="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button5"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="User Area Activity"
            android:onClick="goToUserArea"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintBottom_toTopOf="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:id="@+id/button6"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Main Activity"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button5" />
    </android.support.constraint.ConstraintLayout>
    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorGrey5_Dim"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:orientation="vertical">

        <!-- <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/navigation_profile"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/navigation_interests"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/navigation_events"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:textColor="@color/colorPrimaryDark" /> -->

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:textColor="@color/colorGrey0_Gainsboro"
            android:text="@string/navigation_profile" />

        <View
            android:layout_width="140dp"
            android:layout_height="0.25dp"
            android:paddingTop="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorGrey6_Charcoal"/>
        <View
            android:layout_width="142dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorGrey6_Charcoal"/>
        <View
            android:layout_width="143dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorGrey6_Charcoal"/>
        <View
            android:layout_width="144dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorGrey6_Charcoal"/>
        <View
            android:layout_width="143dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorGrey6_Charcoal"/>
        <View
            android:layout_width="140dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorGrey6_Charcoal"/>
        <View
            android:layout_width="142dp"
            android:layout_height="0.25dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorGrey6_Charcoal"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:textColor="@color/colorGrey0_Gainsboro"
            android:text="@string/navigation_interests" />


    </LinearLayout>
</android.support.v4.widget.DrawerLayout>

